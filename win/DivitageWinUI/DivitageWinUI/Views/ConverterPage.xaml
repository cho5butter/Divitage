<Page
    x:Class="DivitageWinUI.Views.ConverterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Background="Transparent">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <ScrollViewer>
        <Grid RowSpacing="20" Padding="24">
            <Grid.ChildrenTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="50" />
                    <RepositionThemeTransition />
                </TransitionCollection>
            </Grid.ChildrenTransitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="200" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock Text="Divitage for Windows" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="ドラッグ＆ドロップまたはファイル選択で変換キューを作成します。" />
            </StackPanel>

            <!-- プロファイル選択 -->
            <StackPanel Grid.Row="1" Spacing="8">
                <TextBlock Text="変換プロファイル" FontWeight="SemiBold" />
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="ProfileComboBox"
                              HorizontalAlignment="Stretch"
                              SelectionChanged="OnProfileSelectionChanged"
                              DisplayMemberPath="Name" />
                    <Button Grid.Column="1" Content="設定" Click="OnConfigureProfileClicked" />
                    <Button Grid.Column="2" Content="管理" Click="OnManageProfilesClicked" />
                </Grid>
            </StackPanel>

            <Border Grid.Row="2"
                    x:Name="DropZone"
                    BorderBrush="{ThemeResource AccentFillColorTertiaryBrush}"
                    BorderThickness="2"
                    CornerRadius="16"
                    AllowDrop="True"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    DragOver="OnDropZoneDragOver"
                    Drop="OnDropZoneDrop"
                    Translation="0,0,8">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <Border.Transitions>
                    <TransitionCollection>
                        <AddDeleteThemeTransition />
                        <ContentThemeTransition />
                    </TransitionCollection>
                </Border.Transitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                        <FontIcon Glyph="&#xE8B7;" FontSize="48" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                        <TextBlock Text="ここにファイル / フォルダをドロップ"
                                   HorizontalAlignment="Center"
                                   Style="{StaticResource BodyStrongTextBlockStyle}" />
                        <TextBlock Text="または下のボタンから選択"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Style="{StaticResource CaptionTextBlockStyle}" />
                    </StackPanel>
                    <Border Grid.Row="1"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="0,0,14,14"
                            Padding="16,12">
                        <TextBlock Text="⌨ Ctrl+Enter で変換開始"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Style="{StaticResource CaptionTextBlockStyle}" />
                    </Border>
                </Grid>
            </Border>

            <StackPanel Orientation="Horizontal" Grid.Row="3" Spacing="12">
                <Button Content="ファイルを追加" Click="OnAddFilesClicked" />
                <Button Content="フォルダを追加" Click="OnAddFolderClicked" />
            </StackPanel>

            <StackPanel Grid.Row="4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="投入予定" FontWeight="SemiBold" />
                    <TextBlock x:Name="PendingCountText" Text="0 件" />
                </StackPanel>
                <ListView x:Name="PendingList" Height="120" />
            </StackPanel>

            <StackPanel Grid.Row="5" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="出力先" FontWeight="SemiBold" />
                <TextBlock x:Name="OutputPathText" TextWrapping="Wrap" Width="400" />
                <Button Content="変更" Click="OnChangeOutputClicked" />
            </StackPanel>

            <!-- プログレスバー -->
            <StackPanel Grid.Row="6" Spacing="8" x:Name="ProgressSection" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="変換進捗" FontWeight="SemiBold" />
                    <TextBlock x:Name="ProgressPercentText" />
                </StackPanel>
                <ProgressBar x:Name="ConversionProgressBar" Height="8" />
                <TextBlock x:Name="CurrentFileText" Opacity="0.7" />
            </StackPanel>

            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="QueueStatusText" Text="キュー: 0 件" VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button x:Name="ConvertButton" Content="変換開始" Click="OnConvertClicked" />
                    <Button x:Name="CancelButton" Content="キャンセル" Click="OnCancelClicked" IsEnabled="False" />
                    <Button x:Name="HistoryButton" Content="履歴" Click="OnHistoryClicked" />
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="8">
                <TextBlock Text="アクティビティ" FontWeight="SemiBold" />
                <ListView x:Name="LogListView" Height="180" />
                <TextBlock x:Name="StatusInfo" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
