<Page
    x:Class="DivitageWinUI.Views.HowToPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="12">
            <TextBlock Text="使い方" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Text="1. 変換したいファイル / フォルダを準備します。" />
            <TextBlock Text="2. ドロップゾーンへドラッグ＆ドロップします。" />
            <TextBlock Text="3. Ctrl+Enter または『変換開始』で処理を実行します。" />
            <TextBlock Text="4. 完了後に保存先を開きます。" />
            <TextBlock Text="ショートカット" FontWeight="SemiBold" Margin="0,12,0,0" />
            <TextBlock Text="Ctrl+Enter : 変換開始" />
            <TextBlock Text="Ctrl + 1/2/3 : コンバーター / 設定 / 使い方" />
        </StackPanel>
    </ScrollViewer>
</Page>
