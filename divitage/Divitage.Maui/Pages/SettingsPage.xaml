<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divitage.Maui.Pages.SettingsPage"
             Title="設定">
    <ScrollView>
        <VerticalStackLayout Spacing="24">
            <VerticalStackLayout>
                <Label Text="保存場所" FontAttributes="Bold" />
                <Picker x:Name="SaveLocationPicker" SelectedIndexChanged="OnSaveLocationChanged">
                    <Picker.Items>
                        <x:String>元ファイルと同じフォルダ</x:String>
                        <x:String>カスタムフォルダ</x:String>
                    </Picker.Items>
                </Picker>
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <Entry x:Name="DirectoryEntry" Placeholder="保存先" TextChanged="OnDirectoryChanged" />
                    <Button Text="参照" Clicked="OnBrowseClicked" />
                </Grid>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="分割前の確認" FontAttributes="Bold" />
                <Switch x:Name="ConfirmSwitch" Toggled="OnConfirmToggled" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="画像の拡張子" FontAttributes="Bold" />
                <Picker x:Name="ImageFormatPicker" SelectedIndexChanged="OnImageFormatChanged" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="命名規則" FontAttributes="Bold" />
                <Picker x:Name="NameConventionPicker" SelectedIndexChanged="OnNameConventionChanged" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="分割方法" FontAttributes="Bold" />
                <Picker x:Name="SplitModePicker" SelectedIndexChanged="OnSplitModeChanged" />
                <Entry x:Name="SplitIntervalEntry" Placeholder="間隔" Keyboard="Numeric" TextChanged="OnSplitIntervalChanged" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="開始/終了フレーム" FontAttributes="Bold" />
                <Switch x:Name="FrameRangeSwitch" Toggled="OnFrameRangeToggled" />
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <Entry x:Name="StartFrameEntry" Placeholder="開始" Keyboard="Numeric" TextChanged="OnStartFrameChanged" />
                    <Entry x:Name="EndFrameEntry" Placeholder="終了" Keyboard="Numeric" TextChanged="OnEndFrameChanged" />
                </Grid>
            </VerticalStackLayout>

            <Label x:Name="StatusLabel" TextColor="#FFD1D1D1" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
