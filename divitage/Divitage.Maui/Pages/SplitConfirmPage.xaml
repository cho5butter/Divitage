<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divitage.Maui.Pages.SplitConfirmPage"
             Title="確認">
    <VerticalStackLayout Spacing="16">
        <Label Text="このファイルを処理しますか？" FontSize="20" FontAttributes="Bold" />
        <Frame Padding="0" BorderColor="#333" BackgroundColor="#222" HeightRequest="200">
            <Image x:Name="PreviewImage" Aspect="AspectFit" />
        </Frame>
        <Grid RowDefinitions="Auto,Auto,Auto"
              ColumnDefinitions="Auto,*"
              ColumnSpacing="12">
            <Label Text="ファイル名" TextColor="#B9B9B9" />
            <Label x:Name="FileName" Grid.Row="0" Grid.Column="1" />
            <Label Text="総フレーム数" Grid.Row="1" TextColor="#B9B9B9" />
            <Label x:Name="FrameCount" Grid.Row="1" Grid.Column="1" />
            <Label Text="ファイルサイズ" Grid.Row="2" TextColor="#B9B9B9" />
            <Label x:Name="FileSize" Grid.Row="2" Grid.Column="1" />
        </Grid>
        <HorizontalStackLayout Spacing="12">
            <Button Text="キャンセル" BackgroundColor="#8C3D3D" Clicked="OnCancel" />
            <Button Text="変換する" Clicked="OnConfirm" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
