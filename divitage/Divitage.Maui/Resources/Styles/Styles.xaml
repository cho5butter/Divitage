<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <Color x:Key="PrimaryColor">#FF04B2D9</Color>
  <Color x:Key="SecondaryColor">#FF3E3E3E</Color>
  <Color x:Key="AccentColor">#FF40CBEA</Color>
  <Color x:Key="SurfaceColor">#FF2A2A2A</Color>
  <Color x:Key="TextPrimaryColor">#FFEEEEEE</Color>
  <Color x:Key="TextSecondaryColor">#FFB9B9B9</Color>

  <Style TargetType="ContentPage">
    <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
    <Setter Property="Padding" Value="24,32" />
  </Style>

  <Style TargetType="Label">
    <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
  </Style>

  <Style TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
    <Setter Property="TextColor" Value="White" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="HeightRequest" Value="48" />
  </Style>

  <Style TargetType="Entry">
    <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
    <Setter Property="BackgroundColor" Value="#263238" />
    <Setter Property="PlaceholderColor" Value="#66FFFFFF" />
    <Setter Property="Margin" Value="0,4" />
  </Style>

  <Style TargetType="Switch">
    <Setter Property="OnColor" Value="{StaticResource PrimaryColor}" />
    <Setter Property="ThumbColor" Value="{StaticResource AccentColor}" />
  </Style>
</ResourceDictionary>
